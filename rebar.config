%% -*- erlang -*-
{cover_enabled, true}.
{erl_opts, [debug_info, warnings_as_errors, {parse_transform, lager_transform}]}.
{edoc_opts, [{dir, "doc"}]}.
{eunit_opts, [{report,{eunit_surefire,[{dir,"."}]}}]}.
{deps,
 [
  {lager, "2.1.1"},
  {riak_dt, ".*", {git, "https://github.com/basho/riak_dt.git", {tag, "2.1.0"}}},
  {uuid, ".*", {git, "https://github.com/project-fifo/erlang-uuid.git", {tag, "0.4.6"}}},
  {jsx, "1.4.5"},
  {jsxd, "0.1.10"},
  {libsnarlmatch, "0.1.5"}
 ]}.

{profiles,
 [{eqc,
   [{erl_opts, [{d, 'EQC'}]},
    {deps,
     [{fqc, "0.1.6"}]},
    {plugins, [rebar3_eqc]}]}]}.
